from turtle import *
speed (1) 
setup(800,500)

penup()
goto(-400, 250)
pendown()

color('black')
begin_fill()
forward(800)
right(90)
forward(167)
right(90)
fd(800)
end_fill()

left(90)

color('red')
begin_fill()
forward(167)
left(90)
forward(800)
left(90)
fd(167)
end_fill()

penup()
goto(-400, -250)
pendown


color('yellow')
begin_fill()
forward(167)
right(90)
forward(800)
right(90)
fd(167)
end_fill()

hideturtle()
screen.mainloop
